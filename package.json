{
    "name": "twitch-bot",
    "version": "3.5.0",
    "description": "A TypeScript driven automated Twitch client that provides functionality in streamers chats.",
    "author": "Lewis Gibson <lewis-gibson@hotmail.com>",
    "license": "MIT",
    "scripts": {
        "start": "npm-run-all clean build launch",
        "build": "tsc -p .",
        "build:live": "tsc -p . -w",
        "clean": "rimraf build && rimraf tsconfig.tsbuildinfo",
        "test": "jest --verbose",
        "test:live": "jest --verbose --watchAll",
        "lint": "eslint . --ext .js,.ts,.json,.md",
        "lint:fix": "eslint . --ext .js,.ts,.json,.md --fix",
        "coverage": "jest --coverage --maxWorkers=2 && codecov",
        "launch": "node -r source-map-support/register build"
    },
    "typeCoverage": {
        "atLeast": 90
    },
    "dependencies": {
        "@hapi/joi": "^15.1.1",
        "@robinlemon/logger": "^6.0.3",
        "@typegoose/typegoose": "^6.1.2",
        "@types/async-retry": "^1.4.1",
        "@types/bluebird": "^3.5.29",
        "@types/fs-extra": "^8.0.1",
        "@types/hapi__joi": "^15.0.3",
        "@types/mathjs": "^6.0.2",
        "@types/mongoose": "^5.5.31",
        "@types/node": "^12.12.7",
        "async-retry": "^1.2.3",
        "axios": "^0.19.0",
        "bluebird": "^3.7.1",
        "chalk": "^3.0.0",
        "dotenv": "^8.2.0",
        "fs-extra": "^8.1.0",
        "joi-extract-type": "^15.0.0",
        "mathjs": "^6.2.3",
        "mongoose": "^5.7.11",
        "reflect-metadata": "^0.1.13",
        "source-map-support": "^0.5.16",
        "tmi.js": "^1.5.0",
        "twitch": "^3.5.6",
        "twitch-chat-client": "^3.5.8",
        "typescript": "^3.7.0-beta"
    },
    "devDependencies": {
        "@codechecks/client": "^0.1.10",
        "@types/jest": "^24.0.23",
        "@typescript-eslint/eslint-plugin": "^2.7.0",
        "@typescript-eslint/parser": "^2.7.0",
        "codecov": "^3.6.1",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.5.0",
        "eslint-import-resolver-typescript": "^2.0.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jest": "^23.0.4",
        "eslint-plugin-json": "^2.0.1",
        "eslint-plugin-markdown": "^1.0.1",
        "eslint-plugin-optimize-regex": "^1.1.7",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-simple-import-sort": "^4.0.0",
        "eslint-plugin-sort-keys-fix": "^1.1.0",
        "husky": "^3.0.9",
        "jest": "^24.9.0",
        "mocked-env": "^1.3.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.0",
        "ts-jest": "^24.1.0",
        "typecov": "^0.2.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Robinlemon/twitch-trivia-bot.git"
    },
    "bugs": {
        "url": "https://github.com/Robinlemon/twitch-trivia-bot/issues"
    },
    "homepage": "https://github.com/Robinlemon/twitch-trivia-bot#readme"
}
